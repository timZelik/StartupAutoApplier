# Work at a Startup credentials
WORK_AT_A_STARTUP_EMAIL=your_email@example.com
WORK_AT_A_STARTUP_PASSWORD=yourpassword

# LLM Configuration (for future cloud use)
# For local development, we'll use Ollama
LLM_TYPE=ollama
OLLAMA_MODEL=llama3  # or mistral, etc.

# For cloud deployment (future)
# OPENAI_API_KEY=your_openai_key
# ANTHROPIC_API_KEY=your_anthropic_key

# Application settings
HEADLESS=false  # Set to true for cloud deployment
DEBUG=true

# Database (for tracking applications in cloud mode)
DATABASE_URL=sqlite:///./applications.db
